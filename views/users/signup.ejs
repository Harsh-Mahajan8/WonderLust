<% layout('./layouts/boilerplate') -%>

<body>
    <div class="row ">
        <div class="col-4 offset-4">
            <form action="/signup" method="post" novalidate class="needs-validation">
                <div class="mt-4 mb-4">
                    <div class="offset-5">
                        <h1>Sign Up</h1>
                    </div>
                    <div class="username mt-3">
                        <label for="username" class="form-label fs-5">Username</label>
                        <input class="form-control" 
                            type="text" name="username" id="username" placeholder="Add a username" required> 
                        <div class="valid-feedback">
                            Looks good!
                        </div> 
                    </div>
                    <div class="email mt-3">
                        <label for="email" class="form-label fs-5">Email</label>
                        <input class="form-control" 
                            type="text" name="email" id="email" placeholder="Add a email" required> 
                        <div class="valid-feedback">
                            Looks good!
                        </div> 
                    </div>
                    <div class="password mt-3">
                        <label for="password" class="form-label fs-5">Password</label>
                        <input class="form-control" 
                            type="password" name="password" id="password" placeholder="Add a password" required> 
                        <div class="valid-feedback">
                            Strong Password!
                        </div> 
                        <div class="invalid-feedback">
                            Add a valid password!
                        </div>
                    </div>
                    <button class="btn btn-success mt-4">Sign Up</button> 
                </div>
            </form>
        </div>
    </div>
</body>