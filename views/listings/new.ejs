<% layout('./layouts/boilerplate') -%>

<body>
    <h2>Add new Listing:</h2>
    <form action="/listings" method="post">
        <input type="text" name="title" placeholder="Add a Title"><br><br>
        <textarea name="description" id="description" placeholder="description"></textarea><br><br>
        <input type="text" name="image" placeholder="Add a image url"><br><br>
        <input type="number" name="price" placeholder="Add a price"><br><br>
        <input type="text" name="location" placeholder="Add a location"><br><br>
        <input type="text" name="country" placeholder="Add a country"><br><br>
        <button>Add</button>
    </form>
</body>
