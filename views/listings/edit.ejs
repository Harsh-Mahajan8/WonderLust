<% layout('./layouts/boilerplate') -%>

<body>
    <div class="row p-2 fs-5">
        <div class="col-8 offset-2">
            <h2>Update Listing:</h2>
                <form action="/listings/<%= data._id %>?_method=PUT" method="post" novalidate class="needs-validation" >
                    <div class="title mb-3 pt-3">
                        <label for="title" class="form-label">Title:</label>
                        <input class="form-control" type="text" name="title" value="<%= data.title %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>  
                    </div>
                    <div class="description mb-3">
                        <label for="description" class="form-label fs-5">Description</label>
                        <textarea class="form-control" name="description" id="description" rows='2' required><%= data.description %></textarea> 
                        <div class="invalid-feedback">
                            Please enter a short Description!
                         </div> 
                    </div>
                    <div class="image mb-3">
                        <label for="image" class="form-label fs-5">Image URL</label>
                        <input class="form-control" type="file" name="image" value=<%= data.image.url %> required>                        
                    </div>
                    <div class="row">
                        <div class="price mb-3 col-md-4">
                            <label for="price" class="form-label fs-5">Price</label>
                            <input class="form-control" type="number" name="price" value=<%= data.price %> required>
                            <div class="invalid-feedback">
                                Please enter a valid price!
                            </div>  
                        </div>
                        <div class="country mb-3 col-md-8">
                            <label for="country" class="form-label fs-5">Couuntry</label>
                            <input class="form-control" type="text" name="country" value=<%= data.country %> required>                    
                            <div class="invalid-feedback">
                                Please enter a valid country!
                            </div>  
                        </div>
                    </div>
                    
                    <div class="location mb-3">
                        <label for="location" class="form-label fs-5">Location</label>
                        <input class="form-control" type="text" name="location" value=<%= data.location %> required>
                        <div class="invalid-feedback">
                            Please enter a valid location!
                        </div>  
                    </div>
                    <div class="d-flex justify-content-between">
                        <form action="/listings/<%- data._id  %>?_method=PUT" method="post">
                            <button class="btn btn-dark mb-4">Update</button>
                        </form>
                    </div>
                </div>
        </div>
    </div>
    
</body>
