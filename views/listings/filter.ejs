<% layout('./layouts/boilerplate') -%>

<div class="container text-end mt-3">
    <form action="/listings" method="get">
       <button class="btn btn-secondary pe-4 ps-4">
           <i class="fa-solid fa-arrow-left"></i>
       </button>
   </form>    
</div>


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xm-1 ps-5 pe-5 mt-4">
    <% for(let listing of filterListings) {%>
        <div class="listing-card col-3">
            <a href="/listings/<%= listing._id %>" class="indexCard">
                <img src="<%= listing.image.url %>" alt="<%= listing.image.filename %>" class="card-img-top"
                    alt="..." style="height: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= listing.title %>
                    </h5>
                    <p class="card-text">
                        <%= listing.location %>, <%= listing.country %>
                    </p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text"><b>&#8377;<%= listing.price.toLocaleString('en-IN') %>/night</b></p>
                </div>
            </a>
        </div>
        <% } %>
</div>